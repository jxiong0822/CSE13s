# Makefile for CSE 13S, Spring 2023, Assignment 3

# DO NOT EDIT THIS FILE

# Usage:
#
#    $ make             Make the sorting program (ready for LLDB debugging).
#    $ make all
#
#    $ make clean       Type this command after editing this Makefile or
#                       when switching between all and release targets.
#
#    $ make format      Run clang-format on *.c and *.h
#
#    $ make release     Make the sorting program (without debugging info).
#                       We use this for the reference design.


CC=clang
debug:   CFLAGS=-Wall -Wextra -Wstrict-prototypes -Werror -pedantic -g -gdwarf-4
release: CFLAGS=-Wall -Wextra -Wstrict-prototypes -Werror -pedantic
LDFLAGS=-lm

HUFFTESTBIN = huff

PQTESTBIN = pqtest

NODETESTBIN = nodetest

BWTESTBIN = bwtest

HUFFOBJS =\
    huff.o\
    pq.o\
    node.o\
    bitwriter.o\

PQOBJS=\
    pq.o\
    pqtest.o\
    node.o\

NODEOBJS=\
    node.o\
    nodetest.o\

BWOBJS=\
    bitwriter.o\
    bwtest.o\

LIBS1 = io-$(shell uname -m).a

.PHONY: all debug release clean

all: debug

debug: $(PQTESTBIN) $(NODETESTBIN) $(BWTESTBIN) $(HUFFTESTBIN)

release: $(PQTESTBIN) $(NODETESTBIN) $(BWTESTBIN) $(HUFFTESTBIN)

$(PQTESTBIN): $(PQOBJS) $(LIBS1)
	$(CC) $(LDFLAGS) -o $@ $^
	
$(NODETESTBIN): $(NODEOBJS) $(LIBS1)
	$(CC) $(LDFLAGS) -o $@ $^
	
$(BWTESTBIN): $(BWOBJS) $(LIBS1)
	$(CC) $(LDFLAGS) -o $@ $^
	
$(HUFFTESTBIN): $(HUFFOBJS) $(LIBS1)
	$(CC) $(LDFLAGS) -o $@ $^	

%.o : %.c
	$(CC) $(CFLAGS) -c $<

clean:
	rm -f $(PQTESTBIN) $(PQOBJS)
	rm -f $(NODETESTBIN) $(NODEOBJS)
	rm -f $(BWTESTBIN) $(BWOBJS)
	rm -f $(HUFFTESTBIN) $(HUFFOBJS)

format:
	clang-format -i --style=file *.[ch]
